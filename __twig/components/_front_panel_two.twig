{% set content = content_for_snippet(snippet.options.feed_id, snippet.options.post_limit) %}
{% set feed = category_data(snippet.options.feed_id) %}


<div class="tz-box-two ">
    <div class="row">
            <div class="tz-title-filter">
                <h3 class="tz-title">
                    <span>{{ snippet.options.header_string ?? feed.category_title }}</span>
                </h3>
                <div class="tz-cat-filter">
                    <a href={{"/category/#{feed.id}"}} class="">View All</a>
                </div>
            </div>
        <div class="col-md-6 border-right ">
            {% include "layouts/_fp_post_layout_1.twig"  with {'article' : content[0]} %} 
            {% for article in content[1:3] %}
                {% include "layouts/_fp_post_layout_3.twig"  with {'article' : article} %}
            {% endfor %}

        </div>
        <div class="col-md-6">
            {% include "layouts/_fp_post_layout_1.twig"  with {'article' : content[4]} %} 
            {% for article in content[5:7] %}
                {% include "layouts/_fp_post_layout_3.twig"  with {'article' : article} %}
            {% endfor %}
        </div>
    </div>
</div>
